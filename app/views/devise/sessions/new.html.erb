<div class="container">
  <h2 class="about-header">Log in</h2>

  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to " Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "#{provider}-signup" %>
  <% end %>

  <p class="about-header">oder</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%= link_to "Passwort vergessen?", new_password_path(resource_name) %>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button button-blue" %>
    </div>
  <% end %>

  <p class="about-header">Du hast noch keinen Account?</p>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "button button-green" %>
</div>
