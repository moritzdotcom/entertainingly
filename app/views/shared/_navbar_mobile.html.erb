<div class="navbar-wrapper">
  <div onclick="toggleSidebar()" id="toggle-sidebar" class="hamburger-icon">
    <div class="hamburger-line hamburger-line-one"></div>
    <div class="hamburger-line hamburger-line-two"></div>
  </div>
  <%= link_to (render 'shared/mobile-logo'), root_path %>
  <% if user_signed_in? %>
    <div class="avatar-wrapper">
      <% if current_user.photo.attached? %>
        <%= link_to (cl_image_tag current_user.photo.key, height: 100, width: 100, crop: :fill, class: "avatar-round"), edit_user_registration_path %>
      <% else %>
        <% avatar_url = current_user.facebook_picture_url || "https://www.hilfsgemeinschaft.at/profiles/hilfsgemeinschaft_profile/themes/custom/hilfsgemeinschaft_zomg/images/user-picture-default.png" %>
        <%= link_to (image_tag avatar_url, class: "avatar-round"), edit_user_registration_path %>
      <% end %>
    </div>
  <% else %>
    <h5><%= link_to "Login", new_user_session_path %></h5>
  <% end %>
</div>

<div class="sidebar">
  <%= render 'shared/sidebar' %>
</div>

<script>
  function toggleSidebar() {
    document.querySelector('.sidebar').classList.toggle('show');
    document.querySelector('.hamburger-icon').classList.toggle('hamburger-x');
    document.querySelector('body').classList.toggle('stop-scrolling');
    document.querySelector('#body-content').classList.toggle('shift-content');
    document.querySelector('.navbar-wrapper').classList.toggle('shift-content');
  }
</script>
