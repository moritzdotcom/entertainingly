<div class="container spacing-top-1">
  <h2 class="about-header">New Event</h2>
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category_id, collection: Category.all %>
    <%= f.input :amazon_link %>
    <%= f.input :photo, as: :file %>
    <div class="d-flex justify-content-center mb-5">
      <%= f.button :submit, class: "button-blue" %>
    </div>
  <% end %>
</div>
