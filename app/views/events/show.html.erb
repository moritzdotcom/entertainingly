<div class="gradient">
  <img src="<%= @event.image_url %>" alt="<%= @event.name %> title cover" class="image-full-width-30">
</div>

<% if UserFavourite.where(user: current_user).find_by_event_id(@event.id) %>
  <% bookmark = UserFavourite.where(user: current_user).find_by_event_id(@event.id) %>
  <%= link_to '<i class="fas fa-heart"></i>'.html_safe, event_user_favourite_path(@event, bookmark), method: :delete, remote: true, class: "bookmark-icon bookmarked data-event-#{@event.id}" %>
<% else %>
  <%= link_to '<i class="far fa-heart"></i>'.html_safe, event_user_favourites_path(@event), method: :post, remote: true, class: "bookmark-icon data-event-#{@event.id}" %>
<% end %>

<div class="border-bottom-blue">
  <% if user_signed_in? %>
    <% if current_user.admin %>
      <h2 class="highlighted-header spacing-left-half spacing-top-half spacing-bottom-half"><%= @event.name %> <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_event_path(@event) %> <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, event_path(@event), method: :delete, data: {confirm: "Are you sure you want to delete this event?"} %></h2>
    <% else %>
      <h2 class="highlighted-header spacing-left-half spacing-top-half spacing-bottom-half"><%= @event.name %></h2>
    <% end %>
  <% else %>
    <h2 class="highlighted-header spacing-left-half spacing-top-half spacing-bottom-half"><%= @event.name %></h2>
  <% end %>
</div>

<p class="spacing-top-1 padding-bottom-1 border-bottom-blue"><%= @event.description %></p>

<h4>Gleich <a href="<%= @event.amazon_link %>" target="_blank">hier</a> auf Amazon kaufen!</h4>
